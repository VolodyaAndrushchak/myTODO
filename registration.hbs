<!DOCTYPE html> 
<html>

<head>
	<link rel="stylesheet" type="text/css" href="css/styleForRegistration.css" media="screen">
	<link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="css/registrResetStyle.css"> <!-- CSS reset -->
	<link rel="stylesheet" href="css/registrStyle.css"> <!-- Gem style -->
	<script src="js/modernizr.js"></script> <!-- Modernizr -->
	<script src="js/jquery.js"></script>
</head>

<body>

	<div class="cd-user-modal"> <!-- все формы на фоне затемнения-->
		<div class="cd-user-modal-container"> <!-- основной контейнер -->
			<ul class="cd-switcher">
				<li><a href="#0" class="selected">Sing in</a></li>
				<li><a href="#0">Registration</a></li>
			</ul>

			<div id="cd-login" class="is-selected"> <!-- форма входа -->
				<form class="cd-form" method="POST" action="/login">
					<div class = 'title-before-form'>
						<p>Welcome to DailyStudent!</p>
					</div>
					<p class="fieldset">
						<label class="image-replace cd-email" for="signin-email">E-mail</label>
						<input class="full-width has-padding has-border" id="signin-email" type="email" placeholder="E-mail" name="username" required>
						<span class="cd-error-message">error</span>
					</p>

					<p class="fieldset">
						<label class="image-replace cd-password" for="signin-password">Password</label>
						<input class="full-width has-padding has-border" id="signin-password" type="password"  placeholder="Password" name="password" required>
						<!--<a href="#0" class="hide-password">Hide</a>-->
						<span class="cd-error-message">error</span>
					</p>

					<!--<p class="fieldset">
						<input type="checkbox" name="remember_me"  id="remember-me" checked>
						<label for="remember-me">remember me</label>
					</p>-->

					<p class="fieldset">
						<input class="full-width" type="submit" value="Enter" onclick="hello();">
					</p>
				</form>
				
				<p class="cd-form-bottom-message"><a href="#0">Forgot your password?</a></p>
				<!-- <a href="#0" class="cd-close-form">Close</a> -->
			</div> <!-- cd-login -->

			<div id="cd-signup"> <!-- форма регистрации -->
				<form class="cd-form"  method="POST" action = "/registration">
					<div class = 'title-before-form'>
						<p>Welcome to DailyStudent!</p>
					</div>
					
					<p class="fieldset">
						<label class="image-replace cd-username" for="signup-username">First and second name</label>
						<input class="full-width has-padding has-border" id="signup-username" type="text" placeholder="First and second name" name="username" required>
						<span class="cd-error-message">error</span>
					</p>

					<p class="fieldset">
						<label class="image-replace cd-username" for="signup-username">Town</label>
						<input class="full-width has-padding has-border" id="signup-username" type="text"  placeholder="Choose town from drop-down list" name="town" list = 'listTowns' required>
						<!--<a href="#0" class="hide-password">Hide</a>-->
						<span class="cd-error-message">error</span>
						<datalist id = 'listTowns'>
							<option value = 'Вінниця, '></option>
							<option value = 'Дніпро'></option>
							<option value = 'Донецьк'></option>
							<option value = 'Житомир'></option>
							<option value = 'Запоріжжя'></option>
							<option value = 'Івано-Франківськ'></option>
							<option value = 'Київ'></option>
							<option value = 'Кропивницький'></option>
							<option value = 'Луганськ'></option>
							<option value = 'Луцьк'></option>
							<option value = 'Львів'></option>
							<option value = 'Одеса'></option>
							<option value = 'Полтава'></option>
							<option value = 'Рівне'></option>
							<option value = 'Суми'></option>
							<option value = 'Тернопіль'></option>
							<option value = 'Ужгород'></option>
							<option value = 'Харків'></option>
							<option value = 'Херсон'></option>
							<option value = 'Хмельницький'></option>
							<option value = 'Черкаси'></option>
							<option value = 'Чернівці'></option>
							<option value = 'Чернігів'></option>
						</datalist>
					</p>

					<p class="fieldset">
						<label class="image-replace cd-email" for="signup-email">E-mail</label>
						<input class="full-width has-padding has-border" id="signup-email" type="email" placeholder="E-mail" name="email" required>
						<span class="cd-error-message">error</span>
					</p>

					<p class="fieldset">
						<label class="image-replace cd-password" for="signup-password">Password</label>
						<input class="full-width has-padding has-border" id="signup-password" type="password"  placeholder="Password - at least 8 characters" name="password" pattern="[a-zA-Z0-9_@#$%<^&*]{8,}" required>
						<!--<a href="#0" class="hide-password">Hide</a>-->
						<span class="cd-error-message">error</span>
					</p>

					<p class="fieldset">
						<input type="checkbox" id="accept-terms">
						<label for="accept-terms">I agree with <a href="#0">Conditions</a></label>
					</p>

					<p class="fieldset">
						<input class="full-width has-padding" type="submit" value="Create account" onclick="hello();">
					</p>
				</form>

				<!-- <a href="#0" class="cd-close-form">Close</a> -->
			</div> <!-- cd-signup -->

			<div id="cd-reset-password"> <!-- форма восстановления пароля -->
				<p class="cd-form-message">Forgot your password? Please enter your email address. You will receive a letter with your password.</p>

				<form class="cd-form" method="POST" action="/getPassword">
					<p class="fieldset">
						<label class="image-replace cd-email" for="reset-email">E-mail</label>
						<input class="full-width has-padding has-border" id="reset-email" type="email" placeholder="E-mail" name = "email">
						<span class="cd-error-message">error</span>
					</p>

					<p class="fieldset">
						<input class="full-width has-padding" type="submit" value="Restore password">
					</p>
				</form>

				<p class="cd-form-bottom-message"><a href="#0">Back to the entrance</a></p>
			</div> <!-- cd-reset-password -->
			<!--<a href="#0" class="cd-close-form">Close</a>-->
			<div id="statusAuthRegist"><h3>{{{status}}}</h3></div>
		</div> <!-- cd-user-modal-container -->

	</div> <!-- cd-user-modal -->


<script type="text/javascript">
	function hello(){
		console.log('Hello');
	}
	$('.cd-switcher').click(function(){
		$('#statusAuthRegist').find('h3').empty();
		console.log('Empty');
	});


</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="js/main.js"></script> 

</body>

</html>